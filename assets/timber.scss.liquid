  color: $colorTextBody;
  font-weight: $bodyFontWeight;
  margin: 0;

  &:hover,
  &:active {
    font-weight: $bodyFontWeight;
  }

  &.is-active {
    font-weight: $bodyFontWeightBold;
    color: $colorTextBody;
  }
